<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <DatePicker
        android:id="@+id/date"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"

        android:calendarViewShown="false"
        android:datePickerMode="spinner"

        app:layout_constraintEnd_toEndOf="@+id/newtitle"
        app:layout_constraintStart_toStartOf="@+id/newtitle"
        app:layout_constraintTop_toBottomOf="@+id/newtitle" />

    <TextView
        android:id="@+id/newtitle"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:textColor="#181616"
        android:textSize="50sp"
        android:gravity="center_horizontal"
        app:fontFamily="@font/architects_daughter"
        android:layout_marginTop="30dp"
        android:text="New Book"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/inbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="90dp"
        android:onClick="newbook"
        android:text="IN"
        android:textColor="#181616"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/newtitle" />

    <Button
        android:id="@+id/outbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="newbook"
        android:text="OUT"
        android:textColor="#181616"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/newtitle"
        app:layout_constraintTop_toTopOf="@+id/inbtn" />


</androidx.constraintlayout.widget.ConstraintLayout>
